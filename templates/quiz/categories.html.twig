{% extends 'base.html.twig' %}

{% block body %}
    <section id="categories">
    {% for category in categories %}
        <a href="{{ path('app_quiz_list', {slug: category.slug}) }}">
            <div class="category">
                <div class="image">
                </div>
                <div class="name">
                    {{ category.name }}
                </div>
            </div>
        </a>
    {% endfor %}
    </section>
{% endblock %}