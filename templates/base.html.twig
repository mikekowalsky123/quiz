<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Serwis Edukacyjny - {{ title }}{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset("/css/style.css") }}">
        {% endblock %}
    </head>
    <body>
        <div id="header-menu">
            <header id="header">
                <div id="logo">
                    <h1>S-Edu</h1>
                </div>
                <div id="log-buttons">
                    <ul>
                    {% if app.user %}
                        <li><a href="{{ path("app_logout") }}">Wyloguj się</a></li>
                    {% else %}
                        <li><a href="{{ path("app_login") }}">Zaloguj się</a></li>
                        <li><a href="{{ path("app_register") }}">Zarejestruj się</a></li>
                    {% endif %}
                    </ul>
                </div>
            </header>
            <nav id="top-menu">
                {{ render(path("app_menu")) }}
            </nav>
        </div>
        <main>
            <div id="container">
            {% block body %}{% endblock %}
            </div>
        </main>
        {% block footer %}
        <footer id="footer">
            <div>
                <div>Created by Majkuu.</div>
            </div>
        </footer>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
