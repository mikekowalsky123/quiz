<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ title }} - Serwis Edukacyjny{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset("/css/style.css") }}">
        {% endblock %}
    </head>
    <body>
        <div id="header-menu">
            <header id="header">
                <div id="logo">
                    <h1>S-Edu</h1>
                </div>
                <div id="log-buttons">
                    {% if app.user %}
                        <span>Witaj, {{ app.user.firstName }}!</span>
                    {% endif %}
                    <ul>
                    {% if app.user %}
                        <li><a href="{{ path("app_edit_profile") }}">Edycja profilu</a></li>
                        <li><a href="{{ path("app_logout") }}">Wyloguj się</a></li>
                    {% else %}
                        <li><a href="{{ path("app_login") }}">Zaloguj się</a></li>
                        <li><a href="{{ path("app_register") }}">Zarejestruj się</a></li>
                    {% endif %}
                    </ul>
                </div>
            </header>
            <nav id="top-menu">
                {{ render(path("app_menu")) }}
            </nav>
        </div>
        <main>
            <div id="container">
            {% block body %}{% endblock %}
            </div>
        </main>
        {% block footer %}
        <footer id="footer">
            <div>
                <div>
                    <div>
                        <p>Autor: Michał Majkuu Kowalski</p>
                        <p>Kontakt:</p>
                        <p>+48 111 111 111</p>
                        <p>Facebook</p>
                        <p>majk@majk.com</p>
                    </div>
                    <div>
                        <p>&copy; S-Edu 2020</p>
                    </div>
                </div>
            </div>
        </footer>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
